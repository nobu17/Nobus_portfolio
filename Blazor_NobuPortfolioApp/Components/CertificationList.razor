<section class="dark-grey-text text-center">
    <h5 class="font-weight-normal mb-3 text-center"><span class="about-sub-title">資格</span></h5>
    <div class="row">
        @if (CertificationItems != null)
        {
            @foreach (var item in CertificationItems)
            {
                <div class="col-xs-6 col-md-6 col-lg-4">
                    <div class="cert-card media mt-4 px-1">
                        <img class="card-img-100 mr-3" src="@item.IconUrl" alt="cert icon">
                        <div class="media-body">
                            <h5 class="font-weight-bold mt-0 text-primary">
                                @item.Name
                            </h5>
                            取得日:@item.AcquisitionDate
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</section>

