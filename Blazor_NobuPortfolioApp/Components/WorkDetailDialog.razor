@inject IModalService ModalService
<!-- Grid row -->
<div class="row container overflow-auto mt-1">

    <div class="col-md-6 col-sm-12 py-1 pl-2">

        <h5 class="font-weight-normal mb-2">説明</h5>

        <p class="text-muted">@WorkItem.Description</p>

        <ul class="list-unstyled font-small mt-3">
            <li>
                <p class="text-uppercase mb-2"><strong>使用技術</strong></p>
                <p class="text-muted mb-4">@WorkItem.UseLanguages</p>
            </li>

            <li>
                <p class="text-uppercase mb-2"><strong>使用インフラ</strong></p>
                <p class="text-muted mb-4">@WorkItem.UseInfrastructures</p>
            </li>

            <li>
                <p class="text-uppercase mb-2"><strong>参考リンク</strong></p>
                @if (!string.IsNullOrWhiteSpace(WorkItem.Url))
                {
                    <a class="btn btn-success" target="_blank" rel="noopener" href="@WorkItem.Url">Link</a>
                }
                @if (!string.IsNullOrWhiteSpace(WorkItem.SourceCodeUrl))
                {
                    <a class="btn btn-info" target="_blank" rel="noopener" href="@WorkItem.SourceCodeUrl">GitHub</a>
                }
            </li>
        </ul>

    </div>
    <!-- Grid column -->
    <!-- Grid column -->
    <div class="col-md-6 col-sm-12 py-3 d-none d-md-block">
        <!--Carousel Wrapper-->
        <div id="carousel-example-1z" class="carousel slide carousel-fade" data-ride="carousel">
            <!--Indicators-->
            <ol class="carousel-indicators">
                @foreach (var item in WorkItem.ImageUrls.Select((x, index) => new { Image = x, Index = index }))
                {
                    if (item.Index == 0)
                    {
                        <li data-target="#carousel-example-1z" data-slide-to="@item.Index" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carousel-example-1z" data-slide-to="@item.Index"></li>
                    }
                }
            </ol>
            <!--/.Indicators-->
            <!--Slides-->
            <div class="carousel-inner" role="listbox">
                @foreach (var item in WorkItem.ImageUrls.Select((x, index) => new { Image = x, Index = index }))
                {
                    if (item.Index == 0)
                    {
                        <!--First slide-->
                        <div class="carousel-item active">
                            <img class="d-block w-100 img-fluid port-image" src="@item.Image"
                                 alt="First slide">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100 img-fluid port-image" src="@item.Image">
                        </div>
                    }
                }
            </div>
            <!--/.Slides-->
            <!--Controls-->
            <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <!--/.Controls-->
        </div>
        <!--/.Carousel Wrapper-->

    </div>
</div>
<!-- Grid row -->
